# Headpin configuration
#
# :vim:sw=2:ts=2:et:

# Setup your candlepin environment here
# url: refers to the url of the candlepin
#     example https://localhost:8443/candlepin
# oauth_key and oauth_secret :Specify your oauth key and secret
#   used to authenticate with Candlepin
candlepin:
    url: <%= scope.lookupvar("headpin::params::candlepin_url") %>
    oauth_key: <%= scope.lookupvar("headpin::params::oauth_key") %>
    oauth_secret: <%= scope.lookupvar("headpin::params::oauth_secret") %>
    rest_client_timeout: 30

