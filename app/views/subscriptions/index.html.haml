= include_javascripts :treetable
= include_javascripts :subscription
.grid_16
  %h3= _('Current Subscriptions')
  .tree
    - if @subscriptions.nil? || @subscriptions.empty?
      %p= _('No Subscriptions Available')
    - else
      %table#subscriptionTable
        - group = nil  
        %thead
          %th= _('Product')
          %th= _('Quantity')
          %th= _('Trend')        
          %th= _('Contract')
          %th= _('Support Level')
          %th= _('Arch')      
          %th= _('Begins')
          %th= _('Expires')
        %tbody         
          - @subscriptions.each do |sub|
            - new_group = sub.product.cp_id
            - if (new_group != group)
              - group = sub.product.cp_id
              %tr{:id => group}
                %td= sub.product.name
                %td
                %td
                %td
                %td
                %td
                %td
                %td
            %tr{:class => "child-of-#{group}", :id => sub.uuid}
              %td= sub.product.name
              %td
                = sub.consumed
                = "/"
                = sub.quantity
              %td
                =stats_line(sub.consumed_stats) 
              %td=sub.contractNumber
              %td= sub.product.attributes["support_level"] ? sub.product.attributes["support_level"]["value"] : ""
              %td= sub.product.attributes["arch"]["value"]
              %td=l sub.startDate
              %td=l sub.endDate
